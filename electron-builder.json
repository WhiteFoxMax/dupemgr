{
  "asar": true,
  "directories": {
    "buildResources": "assets"
  },
  "files": [
    "dist/**/*",
    "package.json"
  ],
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "portable",
        "arch": [
          "x64"
        ]
      }
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true
  },
  "portable": {
    "artifactName": "${productName}-${version}.exe"
  }
}
